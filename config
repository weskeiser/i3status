# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

#order += "ipv6"
#order += "ethernet _first_"
#order += "disk /"
#order += "load"
order += "tztime left"
order += "tztime time"
order += "memory"
order += "cpu_usage"
order += "cpu_temperature 0"
######
order += "wireless _first_"
######
order += "volume master"
order += "battery all"
order += "tztime date"


#######

tztime left {
    format = "| 🕕 %H:%M |"
    timezone = "Europe/Oslo"
    separator = false
    min_width = 1285
}

tztime time {
    format = " 🕕 %H:%M "
    timezone = "Europe/Oslo"
}

memory {
    format = " 🟢 %percentage_free"

    format_degraded = " 🟡 %percentage_free"
    threshold_degraded = "30%"
    threshold_critical = "10%"


    separator = false
}

cpu_usage {
    format = "🔨 %usage"
    separator = false
}

cpu_temperature 0 {
    format = "🌡️ %degrees°C "
    max_threshold = 75
    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon7/temp1_input"
  }


#######
wireless _first_ {
        format_up = "%quality at %essid %ip "
        format_down = "W: down"
}
#######

volume master {
    format = " 🎵 %volume "
    format_muted = "🔇 %volume"
}

battery all {
        format = " %status %percentage "
        status_chr = "⚡"
        status_full = "⚡"
        status_bat = "🔌"
}

tztime date {
    format = " 🗓️ %d/%m  ‍"
    timezone = "Europe/Oslo"
  }




